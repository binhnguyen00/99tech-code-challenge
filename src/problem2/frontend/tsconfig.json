{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "strict": true,
    "pretty": true,
    "incremental": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "declarationDir": "dist/@types",
    "target": "es2024",
    "module": "es2022",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    ".",
  ],
}